<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<cn.coderdream.widget.TitleView
		app:mTitleView_bottomLineColor="@color/colorAccent"
		app:mTitleView_menuText="@string/app_name"
		android:layout_width="match_parent"
		app:mTitleView_titleTextSize="16sp"
		app:mTitleView_withStatusBarHeight="true"
		app:mTitleView_menuTextSize="12sp"
		android:layout_height="wrap_content"/>

	<cn.coderdream.widget.MProgressBar
		android:layout_width="300dp"
		android:layout_height="20dp"
		android:layout_marginTop="20dp"
		android:layout_gravity="center_horizontal"
		app:mProgressBar_background_color="@color/colorPrimaryDark"
		app:mProgressBar_progress_background_color="@color/colorAccent"
		app:mProgressBar_corners="10dp"
		app:mProgressBar_currentSize="60"
		app:mProgressBar_isShowContent="true"
		app:mProgressBar_stroke="2dp"/>

	<cn.coderdream.widget.MProgressBar
		android:layout_width="60dp"
		android:layout_height="30dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		app:mProgressBar_background_color="@color/colorPrimaryDark"
		app:mProgressBar_progress_background_color="@color/colorAccent"
		app:mProgressBar_corners="6dp"
		app:mProgressBar_currentSize="80"
		app:mProgressBar_isShowContent="true"
		app:mProgressBar_content_textSize="14sp"
		app:mProgressBar_content_textStyle="percent"
		app:mProgressBar_stroke="2dp"/>

	<cn.coderdream.widget.MImageView
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:src="@color/colorPrimaryDark"
		app:mImageView_corners="20dp"
		app:mImageView_stroke="4dp"
		android:layout_width="200dp"
		android:layout_height="100dp"/>

</LinearLayout>