<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:id="@+id/titleView_container"
	android:background="@color/titleBackground"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/titleView_status"
		android:layout_width="match_parent"
		android:layout_height="0dp"/>


	<TextView
		android:layout_below="@+id/titleView_status"
		android:id="@+id/titleView_content"
		android:layout_width="match_parent"
		android:text="标题"
		android:textColor="@color/white"
		android:textSize="16sp"
		android:gravity="center"
		android:layout_centerHorizontal="true"
		android:layout_height="50dp"/>

	<ImageView
		android:id="@+id/titleView_back"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_below="@+id/titleView_status"
		android:src="@mipmap/titleview_back"
		android:padding="16dp"/>

	<ImageView
		android:id="@+id/titleView_menuIcon"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/titleView_status"
		android:visibility="gone"
		android:src="@mipmap/titleview_menu"
		android:padding="16dp"/>

	<TextView
		android:id="@+id/titleView_menuText"
		android:layout_width="wrap_content"
		android:text="菜单"
		android:layout_below="@+id/titleView_status"
		android:textColor="@color/white"
		android:paddingEnd="16dp"
		android:paddingStart="10dp"
		android:textSize="12sp"
		android:gravity="center"
		android:layout_alignParentEnd="true"
		android:layout_centerHorizontal="true"
		android:layout_height="50dp"/>

	<TextView
		android:id="@+id/titleView_line"
		android:layout_width="match_parent"
		android:layout_alignBottom="@+id/titleView_content"
		android:background="@color/white"
		android:layout_height="1dp"/>

</RelativeLayout>